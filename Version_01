      display: block;
      margin-bottom: -5px;
      margin-top: 0px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .nombre-apellido .nombre {
      font-weight: 400;
      font-family: 'Rem Light', 'Segoe UI', Arial, sans-serif;
      margin-right: 2px;
      letter-spacing: 0.7px;
    }

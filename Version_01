    }
    .barra-gris {
      height: 100%;
      background: #3555A9;
      border-radius: 0 0px 0px 0;
      transition: width 0.6s cubic-bezier(.22,1,.36,1);
      box-shadow: 0 1px 3px #0001;
    }
    #panel-controles {
      position: fixed;

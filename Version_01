<body>
  <div class="layout-flex">
    <div id="panel-candidatos">
      <ul class="lista-candidatos" id="listaCandidatos"></ul>
    </div>
    <div id="panel-controles">
      <div class="controles-title">CONTROLES</div>
      <ul class="lista-controles" id="listaControles"></ul>
    </div>
  </div>
  <script>
    // 9 candidatos demo
    const candidatos = [
      { id: 1, nombre: "Jeannette", apellido: "Jara", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68794a1edaed90319dbbe747/jara_crop.png" },
      { id: 2, nombre: "Marco", apellido: "Enríquez-O", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68811095ef62ab04f0d44272/Meo_crop.png" },
      { id: 3, nombre: "Johannes", apellido: "Kayser", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68794a21ef62ab04f0d42e64/kaiser_crop.png" },
      { id: 4, nombre: "Eduardo", apellido: "Artés", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68811093daed90319dbbfd78/Artes_crop.png" },
      { id: 5, nombre: "Franco", apellido: "Parisi", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68794a28fa781357fe505f36/parisi_crop.png" },
      { id: 6, nombre: "Evelyn", apellido: "Matthei", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68794a25fa781357fe505f30/matthei_crop.png" },
      { id: 7, nombre: "José Antonio", apellido: "Kast", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68794a23daed90319dbbe74a/kast_crop.png" },
      { id: 8, nombre: "Harold", apellido: "Mayne-Nicholls", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68922962da735f78cef4b328/Harold_Mayne-Nicholls.png" },
      { id: 9, nombre: "Vlado", apellido: "Mirosevic", foto: "https://media-cdn.flowics.com/user-library-prod/v1/team/3539/68922aca149c59335c80ecb7/Vlado_Mirosevic.png" }
    ];

    const DURACION = 3 * 60;
    let estados = candidatos.map(c => ({
      ...c,
      tiempo: DURACION,
      running: false,
      interval: null,
      everStarted: false
    }));

    // Animación de reordenamiento suave
    function renderCandidatos() {
      let ever = estados.filter(e => e.everStarted);
      let never = estados.filter(e => !e.everStarted);
      ever.sort((a, b) => b.tiempo - a.tiempo);
      let nuevaOrden = ever.concat(never).map(e => e.id);

      const lista = document.getElementById('listaCandidatos');
      // DOM Move Animation
      let items = {};
      [...lista.children].forEach(child => {
        items[child.id.replace('cand-','')] = child;
      });

      let prevPositions = {};
      nuevaOrden.forEach(id => {
        let el = items[id];
        if (el) prevPositions[id] = el.getBoundingClientRect();
      });

      lista.innerHTML = nuevaOrden.map(id => {
        let c = estados.find(x => x.id === id);
        const pct = Math.max(0, Math.min(1, c.tiempo / DURACION));
        return `
        <li class="candidato" id="cand-${c.id}">
          <img class="foto" src="${c.foto}" alt="${c.nombre}">
          <div class="datos-candidato">
            <div class="nombre-box">
              <span class="nombre-apellido">
                <span class="nombre">${c.nombre}</span>
                <span class="apellido">${c.apellido}</span>
              </span>
            </div>
            <div class="barra-tiempo-row">
              <span class="display-tiempo" id="disp-${c.id}">${formatTiempo(c.tiempo)}</span>
              <div class="barra-tiempo">
                <div class="barra-azul" id="bar-azul-${c.id}" style="width:${pct*100}%"></div>
                <div class="barra-gris" id="bar-gris-${c.id}" style="width:${(1-pct)*100}%"></div>
              </div>
            </div>
          </div>
        </li>
        `;
      }).join('');

      // Animar movimientos solo si existen elementos previos
      setTimeout(() => {
        nuevaOrden.forEach((id) => {
          let el = document.getElementById('cand-'+id);
          if (!el || !prevPositions[id]) return;
          let newPos = el.getBoundingClientRect();
          let dy = prevPositions[id].top - newPos.top;
          if (Math.abs(dy) > 0.5) {
            el.style.transition = "none";
            el.style.transform = `translateY(${dy}px)`;
            el.offsetHeight;
            el.classList.add('moving');
            el.style.transition = "transform 0.7s cubic-bezier(.22,1,.36,1), box-shadow 0.3s";
            el.style.transform = "";
            setTimeout(() => {el.classList.remove('moving');}, 800);
          }
        });
      }, 1); // Muy corto delay para asegurar DOM actualizado
    }

    function renderControles() {
      const lista = document.getElementById('listaControles');
      lista.innerHTML = estados.map(c => `
        <li class="control-item">
          <span class="control-nombre">${c.nombre} ${c.apellido}</span>
          <span class="control-btns">
            <button class="control-btn" onclick="pausarCandidato(${c.id})" ${!c.running ? "disabled" : ""} title="Pausar">&#10073;&#10073;</button>
            <button class="control-btn" onclick="reanudarCandidato(${c.id})" ${c.running || c.tiempo===0 ? "disabled" : ""} title="Reanudar">&#9654;</button>
            <button class="control-btn" onclick="resetearCandidato(${c.id})" ${c.tiempo===DURACION ? "disabled" : ""} title="Resetear">&#8634;</button>
          </span>
        </li>
      `).join('');
    }

    function formatTiempo(segundos) {
      let m = Math.floor(segundos/60).toString().padStart(2,"0");
      let s = (segundos%60).toString().padStart(2,"0");
      return `${m}:${s}`;
    }

    function actualizarVistaCrono(id) {
      let c = estados.find(c => c.id === id);
      if (!c) return;
      document.getElementById('disp-'+id).textContent = formatTiempo(c.tiempo);
      let pct = Math.max(0, Math.min(1, c.tiempo / DURACION));
      document.getElementById('bar-azul-'+id).style.width = (pct*100) + "%";
      document.getElementById('bar-gris-'+id).style.width = ((1-pct)*100) + "%";
    }

    window.reanudarCandidato = function(id) {
      let c = estados.find(x=>x.id===id);
      if (c.running || c.tiempo === 0) return;
      c.everStarted = true;
      c.running = true;
      if (c.interval) clearInterval(c.interval);
      // Corrección de tiempo: 1s cada 500ms
      c.interval = setInterval(() => {
        if (c.tiempo > 0) {
          c.tiempo--;
          actualizarVistaCrono(id);
          renderCandidatos();
          if (c.tiempo === 0) {
            clearInterval(c.interval);
            c.running = false;
            renderControles();
          }
        }
      }, 1000);
      renderControles();
      renderCandidatos();
    };

    window.pausarCandidato = function(id) {
      let c = estados.find(x=>x.id===id);
      if (!c.running) return;
      clearInterval(c.interval);
      c.running = false;
      c.interval = null;
      renderCandidatos();
      renderControles();
    };

    window.resetearCandidato = function(id) {
      let c = estados.find(x=>x.id===id);
      if (c.interval) clearInterval(c.interval);
      c.tiempo = DURACION;
      c.running = false;
      c.interval = null;
      c.everStarted = false;
      renderCandidatos();
      renderControles();
    };

    // Inicializa
    renderCandidatos();
    renderControles();

    // Actualización periódica de barras y tiempos (fluidez visual)
    setInterval(() => {
      for (let c of estados) {
        if (c.running && c.tiempo > 0) {
          actualizarVistaCrono(c.id);
        }
      }
    }, 200);

    // No hay setInterval global para descender tiempo, solo los individuales

  </script>
</body>
</html>
